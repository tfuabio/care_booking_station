<h2 class="row p-0 text-nowrap">ケアマネージャー様ユーザー情報編集</h2>

<%= form_with model: @care_manager, url: care_managers_path do |f| %>
  <%= render "care_manager/shared/error_messages", resource: @care_manager %>
  <table class="table table-borderless table-hover bg-light shadow p-0">
    <tr>
      <th class="col-md-2 pt-3 text-nowrap">名前</td>
      <td class="text-nowrap">(性) </td>
      <td class="col-md-3"><%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: 'form-control' %></td>
      <td class="text-nowrap">(名) </td>
      <td class="col-md-3"><%= f.text_field :first_name, placeholder: "道子", class: 'form-control' %></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">フリガナ</td>
      <td>(セイ) </td>
      <td><%= f.text_field :last_name_kana, placeholder: "レイワ", class: 'form-control' %></td>
      <td>(メイ) </td>
      <td><%= f.text_field :first_name_kana, placeholder: "ミチコ", class: 'form-control' %></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">メールアドレス</td>
      <td></td>
      <td><%= f.email_field :email, placeholder: "sample@example.com", class: 'form-control' %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">郵便番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :post_code, placeholder: "1234567", class: 'form-control' %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">住所</td>
      <td></td>
      <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: 'form-control' %></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">電話番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :phone_number, placeholder: "08012345678", class: 'form-control' %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">居宅介護支援事業所名</td>
      <td></td>
      <td colspan="3"><%= f.text_field :office_name, placeholder: "居宅介護支援事業所れいわ", class: 'form-control' %></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">パスワード(６文字以上)</td>
      <td></td>
      <td><%= f.password_field :password, placeholder: "新しいパスワード", class: 'form-control' %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">パスワード(確認用)</td>
      <td></td>
      <td><%= f.password_field :password_confirmation, placeholder: "確認のためもう一度ご入力ください", class: 'form-control' %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <th></th>
      <td colspan="2" class="pt-3 text-nowrap">
        <div class="actions">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        </div>
      </td>
      <td colspan="2" class="pt-3 text-nowrap">
        <%= link_to "退会する", unsubscribe_care_managers_path, class: "btn btn-danger" %>
      </td>
    </tr>
  </table>
<% end %>
