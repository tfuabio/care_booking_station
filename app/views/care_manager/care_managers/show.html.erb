<h1>ケアマネージャー様マイページ</h1>
<div class="row py-3">
  <div class="col-md-2">
    <h5 class="font-weight-bold">登録情報</h5>
  </div>
  <div class="col mr-auto">
    <%= link_to "編集する", edit_care_managers_path, class: "btn btn-success btn-sm px-3 col-md-2 shadow" %>
  </div>
</div>
<div class="row mb-4">
  <div class="col-md-8">
    <table class="table table-bordered table-responsive-md shadow">
      <tr>
        <th class="table-active text-nowrap" style="width:25%">氏名</td>
        <td style="width:75%"><%= current_care_manager.last_name %> <%= current_care_manager.first_name %></td>
      </tr>
      <tr>
        <th class="table-active text-nowrap">カナ</td>
        <td><%= current_care_manager.last_name_kana %> <%= current_care_manager.first_name_kana %></td>
      </tr>
      <tr>
        <th class="table-active text-nowrap">郵便番号</td>
        <td><%= current_care_manager.post_code %></td>
      </tr>
      <tr>
        <th class="table-active text-nowrap">住所</td>
        <td><%= current_care_manager.address %></td>
      </tr>
      <tr>
        <th class="table-active text-nowrap">電話番号</td>
        <td><%= current_care_manager.phone_number %></td>
      </tr>
      <tr>
        <th class="table-active text-nowrap">メールアドレス</td>
        <td><%= current_care_manager.email %></td>
      </tr>
      <tr>
        <th class="table-active text-nowrap">居宅介護支援事業所名</td>
        <td><%= current_care_manager.office_name %></td>
      </tr>
    </table>
  </div>
</div>