<h2 class="row p-0 text-nowrap">担当利用者登録</h2>

<%= form_with model: @user, url: care_manager_users_path do |f| %>
  <%= render "care_manager/shared/error_messages", resource: @user %>
  <table class="table table-borderless table-hover bg-light shadow p-0">
    <tr>
      <th class="col-md-2 pt-3 text-nowrap">名前</td>
      <td>(性) </td>
      <td class="col-md-3"><%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: 'form-control' %></td>
      <td>(名) </td>
      <td class="col-md-3"><%= f.text_field :first_name, placeholder: "道子", class: 'form-control' %></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">フリガナ</td>
      <td>(セイ) </td>
      <td><%= f.text_field :last_name_kana, placeholder: "レイワ", class: 'form-control' %></td>
      <td>(メイ) </td>
      <td><%= f.text_field :first_name_kana, placeholder: "ミチコ", class: 'form-control' %></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">郵便番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :post_code, placeholder: "1234567", class: 'form-control' %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">住所</td>
      <td></td>
      <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: 'form-control' %></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">電話番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :phone_number, placeholder: "08012345678", class: 'form-control' %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">要介護度</td>
      <td></td>
      <td colspan="3"><%= f.select :care_level_status, User.care_level_statuses.keys.map { |k| [t("enums.user.care_level_status.#{k}"), k] }, { prompt: "選択してください" }, class: 'form-control' %></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">性別</td>
      <td></td>
      <td colspan="3"><%= f.select :gender, User.genders.keys.map { |k| [t("enums.user.gender.#{k}"), k] }, { prompt: "選択してください" }, class: 'form-control' %></td>
    </tr>
    <tr>
      <th class="pt-3 text-nowrap">生年月日</td>
      <td></td>
      <td colspan="3"><%= f.date_select :birthday, use_month_numbers: true, start_year: 1890, end_year: (Time.now.year - 30), prompt: "--" %></td>
    </tr>
    <tr>
      <th></th>
      <td></td>
      <td class="pt-3 text-nowrap">
        <div class="actions">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      </td>
      <td></td>
      <td></td>
    </tr>
  </table>
<% end %>
