<%= link_to facility_users_path do %>
  <i class="fas fa-arrow-circle-left"></i>
  利用者情報一覧へ</i>
<% end %>
<div class="row mt-3">
  <div class="col col-12 col-md-4 mb-5">
    <span>
      <h1>利用者情報 <i class="fas fa-user"></i></h1>
      <p class="text-secondary">利用者情報を表示しています。</p>
    </span>
    <%= render 'care_manager/users/info', user: @user %>
  </div>
  <div class="col col-12 col-md-8">
    <span>
      <h1>緊急連絡先一覧 <i class="fas fa-phone"></i></h1>
      <p class="text-secondary"><%= @user.full_name %>様の緊急連絡先です。</p>
    </span>
    <%= render 'care_manager/users/emergency', emergency_contacts: @user.emergency_contacts %>
  </div>
</div>