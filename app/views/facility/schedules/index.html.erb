<h1><%= current_facility.name %>の利用予約表 <%= "#{@today.year}年#{@today.month}月" %></h1>
<div class="table-responsive">
  <table class="table table-sm table-bordered table-responsive-md shadow">
    <thead>
      <tr class="table-active">
        <th></th>
        <% @days.each do |day| %>
          <th class="text-center"><%= day.day %><br><%= @week[day.wday] %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @hash.keys.each do |user| %>
        <tr>
          <th class="text-center text-nowrap"><%= link_to "#{user.full_name} 様", facility_user_path(user) %><%= "(新規)" if current_facility.new_user?(user) %></th>
          <% @days.each do |day| %>
            <td class="text-center">
              <%= @hash[user][day] %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>